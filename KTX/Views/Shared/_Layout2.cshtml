<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KTX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KTX.styles.css" asp-append-version="true" />
</head>
<body>   
      <!-- header -->
      <div class="container" >
        <header id= "navbar" class="d-flex flex-wrap justify-content-center py-5 mb-4 border-bottom">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">            
            <img
                      id="ktx_logo"
                      src="https://ktx.vnuhcm.edu.vn/public/userfiles/logoktx1.png"
                      alt=".... "
                      draggable="false"
                      height="30"
                  />
            
            <span class="fs-4">Trang Ký Túc Xá Đại Học Quốc Gia </span>
          </a>         
        </header>
      </div>

      
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - KTX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
